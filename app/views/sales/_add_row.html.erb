
<%= row_id="row#{rand(10..10000)}"%>
<tr id="<%= row_id %>" >
  <td>
    <input type="text" name="sales[sku][]" autocomplete="off" class="new_sku" id="sale_sku_<%= row_id %>" data-row=<%= row_id %> data-sku='<%= @inventory.order(:sku).map(&:sku) %>' > 
  </td>
  <td>
    <input type="text" name="sales[item_name][]" autocomplete="off" class="new_name "id="sale_name_<%= row_id %>" data-row=<%= row_id %> data-product-name="<%= @inventory.order(:product_name).map(&:product_name) %>" >
  </td>
  <td>
    <input type="text" name="sales[quantity][]" autocomplete="off" class="quantity" id="sale_quantity_<%= row_id %>" data-row=<%= row_id %> >
  </td>
  <td>
    <input type="text" autocomplete="off" id="current_stock_<%= row_id %>">
  </td>
  <td>
    <input type="text" autocomplete="off" id="item_cost_<%= row_id %>"  >
  </td>
  <td>
    <input type="text" name="sales[total_cost][]" autocomplete="off" id="total_cost_<%= row_id %>" >
  </td>

  <td>
    <%= link_to raw('<i class="fa fa-trash-o fa-lg" aria-hidden="true"></i>' ), sales_remove_row_path(:row_id=>row_id ), :method=>:post, remote:true, class: "purchase_delete", id:"sale_delete_#{row_id}" ,:data =>{:row => row_id }  %>
  </td>
</tr>


