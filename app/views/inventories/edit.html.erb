<% content_for :ribbon do %>
  <div id="ribbon">
    <span class="ribbon-button-alignment">
      <span id="refresh" class="btn btn-ribbon" data-action="resetWidgets" data-title="refresh"  rel="tooltip" data-placement="bottom" data-original-title="<i class='text-warning fa fa-warning'></i> Warning! This will reset all your widget settings." data-html="true">
        <i class="fa fa-refresh"></i>
      </span>
    </span>

    <ol class="breadcrumb">
      <li>Home</li>
      <li>Inventroy</li>
      <li>Edit</li>
    </ol>
  </div>
<% end %>

<div class="well no-padding">
  <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
    <form action="/inventories/<%= @inventory.id %>" method="POST" id="smart-wwform-register" class="smart-form client-form">
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <input name="user[store_name]" value= <%= current_store.organization %> type="hidden">
      <input name="inventories[organization_id]" value= <%= current_store.id %> type="hidden">
       <input type= "hidden" name="_method" value="patch">
      <header> Edit Inventory </header>
      <div class= "row">
        <fieldset>
          <section class="col col-8">
            <label class="input">
              <p>Product Name</p>
              <input type="product_name" name="inventories[product_name]" value="<%= @inventory.product_name %>" autocomplete="off">
              <b class="tooltip tooltip-bottom-right">Product Name</b>
            </label>
          </section>
          <section class="col col-8">
            <label class="input">
              <p>SKU</p>
              <input type="number" name="inventories[sku]" value="<%= @inventory.sku %>" autocomplete="off">
              <b class="tooltip tooltip-bottom-right">SKU #</b>
            </label>
          </section>
          <section class="col col-8">
            <label class="input">
              <p>Supplier</p>
              <input type="text" name="inventories[supplier]" value="<%= @inventory.supplier %>"  autocomplete="off">
              <b class="tooltip tooltip-bottom-right">Supplier Name</b>
            </label>
          </section>
          <section class="col col-8">
            <label class="input">
              <p>Product Type</p>
              <input type="text" name="inventories[product_type]" value="<%= @inventory.product_type %>" autocomplete="off">
              <b class="tooltip tooltip-bottom-right">Product Type</b>
            </label>
          </section>
          <section class="col col-8">
            <label class="input">
              <p>Brand</p>
              <input type="text" name="inventories[brand]" value="<%= @inventory.brand %>" autocomplete="off">
              <b class="tooltip tooltip-bottom-right">Product Brand</b>
            </label>
          </section>
          <section class="col col-8">
            <label class="textarea">
              <p>Product Description</p>
              <textarea rows="5"  name="inventories[product_description]" > <%= @inventory.product_description %> </textarea> 
              <b class="tooltip tooltip-bottom-right">Product Description</b>
            </label>
          </section>
          <div class= "row"></div>
          <section class="col col-4">
            <label class="input">
              <p>Buy Price</p>
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-dollar"></i></span>
                <input type="text" name="inventories[buy_price]" value="<%= @inventory.buy_price %>" >
              </div>
            </label>
          </section>
          <section class="col col-4">
            <label class="input">
              <p>Retail Price</p>
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-dollar"></i></span>
                <input type="text" name="inventories[retail_price]" value="<%= @inventory.retail_price %>" >
              </div>
            </label>
          </section>
        </fieldset> 
      </div>
      <footer>
        <button type="submit" class="btn btn-primary"> Edit </button>
      </footer>
    </form>
  </div>
</div>

